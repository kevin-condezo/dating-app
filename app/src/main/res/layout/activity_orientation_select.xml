<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.GenderSelect">
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_back"
        app:tint="@color/colorTextGray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="40dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="My sexual orientation is"
            android:textSize="48sp"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="left"
            android:layout_marginBottom="20dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <RadioButton
                android:id="@+id/maleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/button_selector"
                android:button="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_bold"
                android:padding="15dp"
                android:text="Heterosexual"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/femaleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/button_selector"
                android:button="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_bold"
                android:padding="15dp"
                android:text="Gay"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/everyoneId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/button_selector"
                android:button="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_bold"
                android:padding="15dp"
                android:text="Bisexual"
                android:textAlignment="center"
                android:textColor="@color/color_selector"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/button_color"
            android:backgroundTint="@color/pat2"
            android:textSize="18sp"
            android:text="Continuar"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>