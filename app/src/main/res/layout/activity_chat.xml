<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chat.ChatActivity"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/heap"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_flecha_izquierda"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_match"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/image_profile"/>
        <TextView
            android:id="@+id/profile_name_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Nombre"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:clipToPadding="false"
            android:paddingBottom="35dp"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_color"
            android:backgroundTint="#efefef"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/send_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/button_color"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                app:tint="@color/white" />

            <EditText
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/send_text"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"
                android:hint="Enviar mensaje..."
                android:textColor="@color/black"
                android:textColorHint="#9b9b9b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/send_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:background="@null"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right"
                android:text="Enviar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/send_gallery"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:padding="9dp"
                android:src="@drawable/ic_galery" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>