<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".RegisterPage">

    <!--Bloque Superior-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/block_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <!--Titulo-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/register"
            android:textColor="@color/pat1"
            android:textSize="50sp" />

        <!--Subtitulo-->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="@string/subtitle"
            android:textColor="@color/PlomoApp"
            android:textSize="15sp" />

        <!--Campo de Nombre-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:textColorHint="@color/PlomoApp"
            app:placeholderTextColor="@color/PlomoApp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColor="@color/NegroApp"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Botones de sexo-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup" >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />
        </RadioGroup>


        <!--Campo de Correo-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textColorHint="@color/PlomoApp"
            app:placeholderTextColor="@color/PlomoApp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textColor="@color/NegroApp"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--ContraseÃ±a-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textColorHint="@color/PlomoApp"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_transparent"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textColor="@color/NegroApp"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--Bloque Inferior-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/block_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/block_superior"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <!--Boton de Register-->

        <Button
            android:id="@+id/bt_register_f"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_color"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!--Textos de opcion-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/PlomoApp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/or_signup"
                android:textColor="@color/PlomoApp"
                android:textSize="15sp" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/PlomoApp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Redes sociales-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:rippleColor="@null"
                app:srcCompat="@drawable/google" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:maxImageSize="18dp"
                app:rippleColor="@null"
                app:srcCompat="@drawable/fb" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Textos de confirmacion-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_semibold"
                android:text="@string/no_register"
                android:textColor="@color/PlomoApp" />

            <TextView
                android:id="@+id/text_redirect_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/cc_login"
                android:textColor="@color/pat1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>