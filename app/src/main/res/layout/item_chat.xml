<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/container_oppo">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/message_oppo"
            android:visibility="visible"
            android:background="@drawable/msg_oppo"
            android:layout_gravity="center"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/message_image_oppo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundImageOppo"
            android:src="@drawable/image_default"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/container"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textSize="16sp"
            android:background="@drawable/msg_my"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:visibility="visible"
            android:id="@+id/message"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/message_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundImage"
            android:src="@drawable/image_default"/>

    </LinearLayout>

</RelativeLayout>