<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Home.MatchFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/toolbar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/toolbar_profiles"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Jeff Magallanes"
                    android:textSize="18sp" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/toolbar_profiles"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/jeffprueba"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundImageProfile" />
                <TextView
                    android:id="@+id/toolbar_messages"
                    android:layout_width="wrap_content"
                    android:minWidth="38dp"
                    android:layout_height="38dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_sms"
                    android:drawableStart="@drawable/ic_sms"
                    android:text="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:padding="9dp"
                    android:background="@drawable/circle_drawable"
                    app:tint="#5a5a7e"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/card_stack_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:layout_below="@id/appBarLayout" />

        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--Button Skip-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:backgroundTint="#f7f5ff"
                app:elevation="0dp"
                app:fabSize="normal"
                app:maxImageSize="16dp"
                app:srcCompat="@drawable/ic_x"
                app:tint="#4f4f77" />
            <!--Button return-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_back"
                style="?attr/floatingActionButtonSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:maxImageSize="18dp"
                app:elevation="0dp"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/purple_200" />
            <!--Button Star-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_star"
                style="?attr/floatingActionButtonSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:backgroundTint="#c7e2f6"
                app:elevation="0dp"
                app:maxImageSize="20dp"
                app:srcCompat="@drawable/ic_star"
                app:tint="#44a0e1"/>
            <!--Button Like-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:backgroundTint="#e3f6f4"
                app:elevation="0dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_heart"
                app:tint="#49c0b9"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>